<article class="card">
  <div class="card-body">
    <h3 class="card-title mb-3"><u>At a glance</u></h3>
    <div class="row">
      <div class="col-6">
        <h5 class="card-subtitle text-muted text-center">{{this.model.length}}</h5>
        <div class="card-text text-center">
          <span class="text-nowrap">Customers in pipeline</span>
        </div>
      </div>
      <div class="col-6">
        <h5  class="card-subtitle text-muted text-center">${{this.totalBudget}}M</h5>
        <div class="card-text text-center">
          <span class="text-nowrap">Total forecasted budget</span>
        </div>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-6">
        <h5 class="card-subtitle text-muted text-center">{{this.employedCustomersCount}}</h5>
        <div class="card-text text-center">
          <span class="text-nowrap">Employed customers</span>
        </div>
      </div>
      <div class="col-6">
        <h5 class="card-subtitle text-muted text-center">${{this.averageBudget}}M</h5>
        <div class="card-text text-center">
          <span class="text-nowrap">Average budget</span>
        </div>
      </div>
    </div>
    <div class="row mt-4 {{if isCollapsed "collapse"}}" id="collapseInfo">
      <div class="col-6">
        <h5 class="card-subtitle text-muted text-center">{{this.nonExistentBudgetCount}}</h5>
        <div class="card-text text-center">
          <span>Customer with no budget</span>
        </div>
      </div>
      <div class="col-6">
        <h5 class="card-subtitle text-muted text-center">{{this.customersBelowAverageBudget}}%</h5>
        <div class="card-text text-center">
          <span>Customers below average budget</span>
        </div>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-12 d-flex justify-content-center">
        <button class="btn btn-info mt-2" id="collapseButton" {{action "toggleCollapsedInfo"}}>More</button>
      </div>
    </div>
  </div>
</article>